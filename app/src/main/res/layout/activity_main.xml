<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/layout_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="false"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="@string/team_a"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/team_score_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="36sp" />

        <Button
            android:id="@+id/touch_down_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addTouchDown"
            android:tag="team_a_addTouchdown"
            android:text="@string/touch_down" />

        <Button
            android:id="@+id/field_goal_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addFieldGoal"
            android:text="@string/field_goal" />


        <Button
            android:id="@+id/conv_play_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addConvPlay"
            android:text="@string/conv_play" />

        <Button
            android:id="@+id/conv_kick_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addConvKick"
            android:text="@string/conv_kick" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_toRightOf="@id/layout_a"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="@string/team_b"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/team_score_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="36sp" />

        <Button
            android:id="@+id/touch_down_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addTouchDown"
            android:text="@string/touch_down" />

        <Button
            android:id="@+id/field_goal_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addFieldGoal"
            android:text="@string/field_goal" />

        <Button
            android:id="@+id/conv_play_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addConvPlay"
            android:text="@string/conv_play" />

        <Button
            android:id="@+id/conv_kick_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="addConvKick"
            android:text="@string/conv_kick" />


    </LinearLayout>
</RelativeLayout>
